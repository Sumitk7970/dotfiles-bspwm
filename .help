# grub rescue 
find directory /boot/grub/
set root = (hdx,gpty)
set prefix = (hdx,gpty)/boot/grub
insmod normal 
normal

# backup dotfiles with git bare repository
mkdir dotfiles && cd dotfiles
git init --bare
alias dot="/usr/bin/git --git-dir=$HOME/dotfiles/ --work-tree=$HOME" # add this to .zshrc
dot config --local status.showUntrackedFiles no

# setup libinput gestures
Download libinput-gestures package from aur
copy the config from /etc/libinput-gestures.conf to ~/.config/libinput-gestures.conf
sudo gpasswd -a $User input
newgrp input
reboot

